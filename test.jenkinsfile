pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'anasra/calculator-app:latest'
    }
    tools {
        nodejs "testenvnode"
    }
  
    stages {
        stage('cleanup') {
            steps {
                sh 'rm -rf *'
                sh 'rm -rf .[!.]* ..?*'
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build artifact') {
            steps {
                 sh 'docker rmi $(docker images -q) --force || true'
                 script {
                    docker.withRegistry('https://index.docker.io/v1/', 'myDockerCreds') {
                        env.APP = docker.build(env.DOCKER_IMAGE_NAME)
                    }
                }
                sh 'docker image ls'
            }
        }

        stage('Push artifact') {
            steps {
                sh 'docker push anasra/calculator-app:latest'
            }
        }

        stage('deployment') {
            steps {
                sh 'docker rm -f $(docker ps -aq)'
                script{
                    def image = docker.image(env.DOCKER_IMAGE_NAME)
                    image.run('-p 3000:3000 --name calculator-app')
                }
                
            }
        }

        stage('post cleanup') {
            steps {
                sh 'sleep 120'
                sh 'docker rm -f $(docker ps -aq)'
                sh 'docker rmi $(docker images -q)'
                sh 'rm -rf *'
                sh 'rm -rf .[!.]* ..?*'
            }
        }
    }
}
